{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "resourcepack",
  "description": "MajsoulPlus Resource Pack describe file schema",
  "type": "object",
  "definitions": {
    "semver": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(-((0|[1-9]\\d*|\\d*[A-Z-a-z-][\\dA-Za-z-]*)(\\.(0|[1-9]\\d*|\\d*[A-Za-z-][\\dA-Za-z-]*))*))?(\\+([\\dA-Za-z-]+(\\.[\\dA-Za-z-]*)*))?$"
    }
  },
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[_a-zA-Z]+$"
    },
    "version": {
      "$ref": "#/definitions/semver"
    },
    "name": {
      "type": "string"
    },
    "author": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "preview": {
      "type": "string"
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "replace": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "from": {
                "oneOf": [
                  { "type": "string" },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "to": {
                "type": "string"
              }
            }
          }
        ]
      }
    }
  },
  "required": ["id", "version"]
}
