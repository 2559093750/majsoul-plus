{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "extension",
  "description": "MajsoulPlus Extension describe file schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[_a-zA-Z]+$"
    },
    "version": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "author": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "dependencies": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string"
        }
      }
    },
    "preview": {
      "type": "string"
    },
    "entry": {
      "type": ["string", "array"],
      "pattern": "^(.+)\\.js$",
      "items": {
        "type": "string",
        "pattern": "^(.+)\\.js$"
      }
    }
  },
  "required": ["id", "version"]
}
